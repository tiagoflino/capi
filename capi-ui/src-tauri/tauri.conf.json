{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "capi-ui",
  "version": "0.1.0",
  "identifier": "com.tiago.capi-ui",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "capi-ui",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self' http://127.0.0.1:* https://huggingface.co"
    }
  },
  "bundle": {
    "active": true,
    "externalBin": [
      "bin/capi-server"
    ],
    "targets": [
      "nsis",
      "msi",
      "deb",
      "rpm"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../../libs/openvino/runtime/lib/intel64/*.so*",
      "../../libs/openvino/runtime/3rdparty/tbb/lib/*.so*"
    ]
  }
}